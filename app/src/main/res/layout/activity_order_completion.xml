<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".order.activity.OrderCompletionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toplayout" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingTop="@dimen/dimen_20dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:paddingBottom="@dimen/dimen_20dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="@dimen/dimen_90dp"
                        android:layout_height="wrap_content"
                        android:text="姓名"
                        android:textColor="@color/color_bababa"
                        android:textSize="@dimen/dimen_14sp" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/et_username"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:focusable="false"
                        android:hint="请填入姓名"
                        android:textColor="@color/color_bababa"
                        android:textSize="@dimen/dimen_14sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_d7d7d7"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingTop="@dimen/dimen_20dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:paddingBottom="@dimen/dimen_20dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="@dimen/dimen_90dp"
                        android:layout_height="wrap_content"
                        android:text="手机号"
                        android:textColor="@color/color_bababa"
                        android:textSize="@dimen/dimen_14sp" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/et_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:focusable="false"
                        android:hint="请填入手机号"
                        android:textColor="@color/color_bababa"
                        android:textSize="@dimen/dimen_14sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_d7d7d7"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingTop="@dimen/dimen_20dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:paddingBottom="@dimen/dimen_20dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="@dimen/dimen_90dp"
                        android:layout_height="wrap_content"
                        android:text="申请产品"
                        android:textColor="@color/color_bababa"
                        android:textSize="@dimen/dimen_14sp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_producename"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/color_bababa"
                        android:textSize="@dimen/dimen_14sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_d7d7d7"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingTop="@dimen/dimen_14dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:paddingBottom="@dimen/dimen_14dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="@dimen/dimen_90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="行驶证"
                        android:textColor="@color/color_bababa"
                        android:textSize="@dimen/dimen_14sp" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_drivinglicense"
                        android:layout_width="@dimen/dimen_90dp"
                        android:layout_height="@dimen/dimen_72dp"
                        android:src="@drawable/icon_addphoto" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_dirvinglicensemessage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/color_e92c2a"
                        android:textSize="@dimen/dimen_17sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_d7d7d7"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingTop="@dimen/dimen_14dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:paddingBottom="@dimen/dimen_14dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="@dimen/dimen_90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="身份证正面"
                        android:textColor="@color/color_2f2f2f"
                        android:textSize="@dimen/dimen_14sp" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_front"
                        android:layout_width="@dimen/dimen_90dp"
                        android:layout_height="@dimen/dimen_72dp"
                        android:src="@drawable/icon_addphoto" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_frontmessage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/color_e92c2a"
                        android:textSize="@dimen/dimen_17sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_d7d7d7"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingTop="@dimen/dimen_14dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:paddingBottom="@dimen/dimen_14dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="@dimen/dimen_90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="身份证正面"
                        android:textColor="@color/color_2f2f2f"
                        android:textSize="@dimen/dimen_14sp" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_reverse"
                        android:layout_width="@dimen/dimen_90dp"
                        android:layout_height="@dimen/dimen_72dp"
                        android:src="@drawable/icon_addphoto" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_reversemessage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/color_e92c2a"
                        android:textSize="@dimen/dimen_17sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_d7d7d7"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_10dp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_commit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_50dp"
                    android:layout_marginTop="@dimen/dimen_40dp"
                    android:layout_marginRight="@dimen/dimen_50dp"
                    android:layout_marginBottom="@dimen/dimen_40dp"
                    android:background="@drawable/circle_colorprimal_12px"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="提交"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_14sp" />
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressbar"
        android:visibility="gone"
        android:layout_gravity="center"/>
</FrameLayout>