<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/iv_oval"
            android:layout_width="@dimen/dimen_8dp"
            android:layout_height="@dimen/dimen_8dp"
            android:background="@drawable/oval_178c68_8dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_34dp"
            android:layout_toRightOf="@id/iv_oval"
            android:text="线下沟通"
            android:textColor="@color/color_178C68"
            android:textSize="@dimen/dimen_14sp" />

        <com.fang.dashview.DashView
            android:id="@+id/dashview_check"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_32dp"
            android:layout_below="@id/iv_oval"
            android:layout_marginLeft="@dimen/dimen_4dp"
            app:dashOrientation="1"
            app:dashWidth="2dp"
            app:lineColor="@color/color_178C68"
            app:lineHeight="1dp"
            app:lineWidth="4dp" />
        <com.fang.dashview.DashView
            android:id="@+id/dashview_nocheck"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_32dp"
            android:layout_below="@id/iv_oval"
            android:layout_marginLeft="@dimen/dimen_4dp"
            app:dashOrientation="1"
            app:dashWidth="2dp"
            app:lineColor="@color/color_bababa"
            app:lineHeight="1dp"
            app:lineWidth="4dp" />
    </RelativeLayout>


</RelativeLayout>