<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".order.activity.OrderRefusalDetailActivity">

    <include layout="@layout/toplayout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_20dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_20dp">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="@dimen/dimen_90dp"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="@color/color_bababa"
            android:textSize="@dimen/dimen_14sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_bababa"
            android:textSize="@dimen/dimen_14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_d7d7d7"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_20dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_20dp">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="@dimen/dimen_90dp"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/color_bababa"
            android:textSize="@dimen/dimen_14sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_bababa"
            android:textSize="@dimen/dimen_14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_d7d7d7"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_20dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_20dp">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="@dimen/dimen_90dp"
            android:layout_height="wrap_content"
            android:text="申请产品"
            android:textColor="@color/color_bababa"
            android:textSize="@dimen/dimen_14sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_producename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_bababa"
            android:textSize="@dimen/dimen_14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_d7d7d7"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_30dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_30dp">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="@dimen/dimen_90dp"
            android:layout_height="wrap_content"

            android:text="拒批原因"
            android:textColor="@color/color_2f2f2f"
            android:textSize="@dimen/dimen_14sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_e92c2a"
            android:textSize="@dimen/dimen_14sp" />
    </LinearLayout>
</LinearLayout>
