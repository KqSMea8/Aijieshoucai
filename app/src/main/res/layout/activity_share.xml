<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".my.activity.ShareActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toplayout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30dp"
            android:layout_marginTop="@dimen/dimen_40dp"
            android:layout_marginRight="@dimen/dimen_30dp"
            android:background="@drawable/circle_fff_12dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_14dp"
                android:text="分享越多，佣金越多"
                android:textColor="@color/color_2f2f2f"
                android:textSize="@dimen/dimen_24sp"

                />

            <com.fang.dashview.DashView
                android:id="@+id/dashview_check"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:layout_marginTop="@dimen/dimen_11dp"
                app:dashOrientation="0"
                app:dashWidth="2dp"
                app:lineColor="@color/color_979797"
                app:lineHeight="1dp"
                app:lineWidth="4dp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_share"
                android:layout_width="match_parent"
                android:layout_height="245dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dimen_35dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_35dp"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:text="我的邀请码:00000"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多分享方式"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="53dp"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_14sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_25dp"
            android:layout_marginBottom="53dp"
            android:orientation="horizontal">
            
            <LinearLayout
                android:id="@+id/ll_weixin"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="42dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="42dp"
                    android:src="@drawable/icon_wechat"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/dimen_16sp"
                    android:text="微信"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_pengyouquan"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="42dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="42dp"
                    android:src="@drawable/icon_cof"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/dimen_16sp"
                    android:text="朋友圈"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_qq"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="42dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="42dp"
                    android:src="@drawable/icon_qq"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/dimen_16sp"
                    android:text="QQ"/>
            </LinearLayout>
            

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>