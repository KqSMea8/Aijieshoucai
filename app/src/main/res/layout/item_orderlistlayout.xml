<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20dp"
        android:background="#d5d5d5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_13dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_13dp">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="@dimen/dimen_90dp"
            android:layout_height="wrap_content"
            android:text="订单号："
            android:textColor="@color/color_bababa"
            android:textSize="@dimen/dimen_10sp" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_orderid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_2f2f2f"
            android:textSize="@dimen/dimen_10sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:textColor="@color/color_178C68"
            android:textSize="@dimen/dimen_10sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_d7d7d7"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_13dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_13dp">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="@dimen/dimen_90dp"
            android:layout_height="wrap_content"
            android:text="申请人："
            android:textColor="@color/color_bababa"
            android:textSize="@dimen/dimen_10sp" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_2f2f2f"
            android:textSize="@dimen/dimen_10sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_13dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_13dp">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="@dimen/dimen_90dp"
            android:layout_height="wrap_content"
            android:text="放款类型:"
            android:textColor="@color/color_bababa"
            android:textSize="@dimen/dimen_10sp" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_producename"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/color_2f2f2f"
            android:textSize="@dimen/dimen_10sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         android:layout_gravity="right"
            android:orientation="horizontal">


            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码:"
                android:textColor="@color/color_bababa"
                android:textSize="@dimen/dimen_10sp" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:textColor="@color/color_2f2f2f"
                android:textSize="@dimen/dimen_10sp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_d7d7d7"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp" />
</LinearLayout>