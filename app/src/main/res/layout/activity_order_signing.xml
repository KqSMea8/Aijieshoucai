<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".order.activity.OrderSigningActivity">

    <include layout="@layout/toplayout" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_20dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_20dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="@dimen/dimen_90dp"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="@color/color_bababa"
                    android:textSize="@dimen/dimen_14sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_bababa"
                    android:textSize="@dimen/dimen_14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_d7d7d7"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_20dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_20dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="@dimen/dimen_90dp"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textColor="@color/color_bababa"
                    android:textSize="@dimen/dimen_14sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/color_bababa"
                    android:textSize="@dimen/dimen_14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_d7d7d7"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_20dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_20dp">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="@dimen/dimen_90dp"
                    android:layout_height="wrap_content"
                    android:text="申请产品"
                    android:textColor="@color/color_bababa"
                    android:textSize="@dimen/dimen_14sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_producename"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="超级贷款"
                    android:textColor="@color/color_bababa"
                    android:textSize="@dimen/dimen_14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_d7d7d7"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_58dp"
                android:layout_marginTop="@dimen/dimen_16dp" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>