<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_38dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_38dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:background="@drawable/circle_eee_12dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_14dp"
        android:paddingTop="@dimen/dimen_4dp"
        android:paddingRight="@dimen/dimen_14dp"
        android:paddingBottom="@dimen/dimen_4dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_search"
            android:layout_width="@dimen/dimen_30dp"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_search" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_13dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="搜索"
            android:textColor="@color/color_bababa"
            android:textSize="@dimen/dimen_14sp" />
    </LinearLayout>
</merge>