<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f8f8f8"
    android:orientation="vertical"
    tools:context=".home.activity.BrokderRankingDetailActivity">

    <include layout="@layout/toplayout" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="@dimen/dimen_60dp"
                    android:layout_height="@dimen/dimen_60dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_launcher" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_29dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dimen_81dp"
                            android:layout_height="wrap_content"
                            android:text="姓名："
                            android:textColor="@color/color_2f2f2f"
                            android:textSize="@dimen/dimen_14sp" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_2f2f2f"
                            android:textSize="@dimen/dimen_14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dimen_81dp"
                            android:layout_height="wrap_content"
                            android:text="本月佣金："
                            android:textColor="@color/color_2f2f2f"
                            android:textSize="@dimen/dimen_14sp" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_ff6900"
                            android:textSize="@dimen/dimen_14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dimen_81dp"
                            android:layout_height="wrap_content"
                            android:text="累计佣金："
                            android:textColor="@color/color_2f2f2f"
                            android:textSize="@dimen/dimen_14sp" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_sum_commision"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_ff6900"
                            android:textSize="@dimen/dimen_14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/dimen_17dp"
                android:background="@color/color_d7d7d7" />
            <!-- 最近三个月业务统计-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_10dp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="20dp"
                    android:background="@color/string_e92c2a" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:text="最近三个月业务统计"
                    android:textColor="@color/color_2f2f2f"
                    android:textSize="@dimen/dimen_14sp" />
            </LinearLayout>
            <!-- 最近三个月业务统计-->
            <!-- 累计进件-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dimen_90dp"
                    android:layout_height="wrap_content"
                    android:text="累计进件："
                    android:textColor="@color/color_979797"
                    android:textSize="@dimen/dimen_14sp"

                    />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_incom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_ff6900"
                    android:textSize="@dimen/dimen_14sp"
                    />

            </LinearLayout>
            <!-- 累计进件-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_d7d7d7"/>
            <!-- 累计审批-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_10dp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView

                    android:layout_width="@dimen/dimen_90dp"
                    android:layout_height="wrap_content"
                    android:text="累计审批："
                    android:textColor="@color/color_979797"
                    android:textSize="@dimen/dimen_14sp"

                    />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_approve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_ff6900"
                    android:textSize="@dimen/dimen_14sp"
                    />

            </LinearLayout>
            <!-- 累计审批-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_d7d7d7"/>
            <!-- 累计放款-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_10dp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="@dimen/dimen_90dp"
                    android:layout_height="wrap_content"
                    android:text="累计放款："
                    android:textColor="@color/color_979797"
                    android:textSize="@dimen/dimen_14sp"

                    />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_fangkuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_ff6900"
                    android:textSize="@dimen/dimen_14sp"
                    />

            </LinearLayout>
            <!-- 累计放款-->

            <!-- 累计驳回-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_10dp"
                android:visibility="gone"
                android:paddingTop="@dimen/dimen_10dp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="@dimen/dimen_90dp"
                    android:layout_height="wrap_content"
                    android:text="累计驳回："
                    android:textColor="@color/color_2f2f2f"
                    android:textSize="@dimen/dimen_14sp"

                    />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_bohui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_ff6900"
                    android:textSize="@dimen/dimen_14sp"
                    />

            </LinearLayout>
            <!-- 累计驳回-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_d7d7d7"/>

            <!-- 推荐数统计-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_10dp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="20dp"
                    android:background="@color/string_e92c2a" />


                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:text="推荐数统计"
                    android:textColor="@color/color_2f2f2f"
                    android:textSize="@dimen/dimen_14sp" />
            </LinearLayout>
            <!-- 推荐数统计-->
            <!-- 二级推荐-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_10dp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="@dimen/dimen_90dp"
                    android:layout_height="wrap_content"
                    android:text="二级推荐："
                    android:textColor="@color/color_979797"
                    android:textSize="@dimen/dimen_14sp"

                    />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_directcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_ff6900"
                    android:textSize="@dimen/dimen_14sp"
                    />

            </LinearLayout>
            <!-- 二级推荐-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_d7d7d7"/>
            <!-- 三级推荐-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_10dp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="@dimen/dimen_90dp"
                    android:layout_height="wrap_content"
                    android:text="三级推荐："
                    android:textColor="@color/color_979797"
                    android:textSize="@dimen/dimen_14sp"

                    />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_indirectcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_ff6900"
                    android:textSize="@dimen/dimen_14sp"
                    />

            </LinearLayout>
            <!-- 三级推荐-->



        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>